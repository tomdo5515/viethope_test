<script>
    $(document).ready(function(){
        var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        $("input.subscribe_email").on('keydown', function (e) {
            if (e.keyCode == 13) {
                // Do something
                var subscribe_email = $(this).val();
                if(!re.test(String(subscribe_email).toLowerCase()))
                {
                    swal("Opp!", "email invaild!", "warning");
                }
                else{
                    $.ajax({
                        url: "{{base_url}}mail/subscribe/" + subscribe_email,
                    }).done(function(data) {
                        if(data.status=="subscribed" || data.status==0 || data.status==400){
                            swal("{{lang('subscribing_popup')}}", "{{lang('subscribing_popup_detail')}}", "success");
                            $('input.subscribe_email').val('');
                        }
                        else
                        {
                            swal("Opp!", "internal error!", "warning");
                        }
                    });
                }
                console.log(subscribe_email);
                return false;
            }
        });
        $('#subscribe_submit').on('click', function () {
            // $(this).toggleClass("open-menu");
            var subscribe_email = $('input.subscribe_email').val();
            if(!re.test(String(subscribe_email).toLowerCase()))
            {
                swal("Opp!", "email invaild!", "warning");
            }
            else{
                $.ajax({
                    url: "{{base_url}}mail/subscribe/" + subscribe_email,
                }).done(function(data) {
                    if(data.status=="subscribed" || data.status==0 || data.status==400){
                        swal("{{lang('subscribing_popup')}}", "{{lang('subscribing_popup_detail')}}", "success");
                        $('input.subscribe_email').val('');
                    }
                    else
                    {
                        swal("Opp!", "internal error!", "warning");
                    }
                });
            }
            console.log(subscribe_email);
        })
    });
</script>
