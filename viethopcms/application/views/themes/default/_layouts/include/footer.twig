    <div class="container">
        <div class="col-md-10 offset-md-1">
            <div class="row">
                <div class="col-md-5 text">
                    <h5>Get Our Newsletter To Stay Up To Date</h5>
                </div>
                <div class="col-md-7">
                    <form action="" method="post">
                        <div class="input-group input-group">
                            <input type="text" class="form-control subscribe_email" placeholder="input your email">
                            <div class="input-group-append">
                                <input id="subscribe_submit" class="btn" type="button" value="Subscribe">
                            </div>
                        </div>
                    </form>
