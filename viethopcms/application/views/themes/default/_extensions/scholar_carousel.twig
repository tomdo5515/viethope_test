{% if scholars %}
<section class="wrapper-car">
    <style type="text/css">
        .wrapper-car{
            width: 100%;
        }

        .wrapper-car .owl-carousel{
            position: initial;
        }

        .extention-carousel-outner{
            width: 100%;
            max-width: 1920px;
            position: relative;
        }

        .extention-carousel{
            width: 100%;
            margin: 0 auto;
            
        }

        .wrapper-car .owl-nav button.owl-prev, .wrapper-car .owl-nav button.owl-next{
            position: absolute;
            font-size: 2rem;
            top: 10%;
            font-size: 50px;
            color: white;
            width: 40px;
            line-height: 34px;
            background: #4c893a;
            padding: 0px 0px 7px !important;
            margin: 25px 2px;
            opacity: 0.5;
        }

        .wrapper-car .owl-nav button.owl-prev:hover, .wrapper-car .owl-nav button.owl-next:hover{
            opacity: 1;
        }

        .wrapper-car .owl-nav button.owl-prev{
            left: 0px;
        }

        .wrapper-car .owl-nav button.owl-next{
            right: 0px;
        }

        .extention-carousel .slider-content{
            display: flex;
        }
        .extention-carousel .slider-content .thumb span{
            width: 90px;
            height: 90px;
            border-radius: 90px;
            overflow: hidden;
            display: inline-block;
        }
        .extention-carousel .slider-content .thumb image{
            width: 100%;
        }

        .extention-carousel .slider-content .desc{
            padding: 15px 20px;
        }

        @media (min-width: 576px){
            
        }
        
        @media (min-width: 768px){
        }

        @media (min-width: 992px){
            .extention-carousel{
                width: 85%;
            }
            .extention-carousel .slider-content .thumb span{
                width: 9rem;
                height: 9rem;
                border-radius: 9rem;
                overflow: hidden;
                display: inline-block;
            }
        }
        @media (min-width: 1400px){
            .extention-carousel{
                width: 80%;
            }
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function(){
            $(".extention-carousel").owlCarousel({
                loop:true,
                responsiveClass:true,
                autoplay: true,
                nav:true,
                responsive:{
                    1:{
                        items:1,
                        margin: 0,
                        nav:false,
                    },
                    600:{
                        items:2,
                        margin: 20
                    },
                    2500:{
                        items:3,
                        margin: 10
                    }
                }
            });
        });
    </script>
    <div class="extention-carousel-outner">
        <div class="extention-carousel owl-carousel">
            {% for cl in scholars %}
                <div class="slider-content">
                    <div class="thumb"><span><img alt="{{cl['article_title']}}" src="{{cl['thumbnail']}}" /></span></div>
                    <div class="desc">
                        <h3 class="uppercase-text font-bold-16">{{cl['article_title']}}</h3>
                        <p>{{cl['article_description']}}</p>
                        <a href="#" data-toggle="modal" data-target="#extentions{{cl['id']}}" title="">Read more</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% for cl in scholars %}
        <div class="modal fade viethope-modal" id="extentions{{cl['id']}}" tabindex="-1" role="dialog" aria-labelledby="{{cl['article_title']}}" aria-hidden="true" >
            {{cl['article_content']}}
        </div>
        {% endfor %}
    </div>
</section>
{% endif %}